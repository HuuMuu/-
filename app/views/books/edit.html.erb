<h1>Editing Book</h1>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to "Back", action: 'index' %>
  <%= link_to 'Show', book_path(@book.id) %>

<% end %>