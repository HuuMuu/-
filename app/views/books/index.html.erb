<h1>Books</h1>

<% @books.each do |book| %>
<h4>Title</h4>
<span><%= book.title %>
</span>
<h4>Body</h4>
<span><%= book.body %>
</span>

<span><%= link_to 'show', book_path(book.id) %>
</span>
<span><%= link_to 'edit', edit_book_path(book.id) %>
</span>
<span><%= link_to 'Destroy',destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</span>
<% end %>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>